            <Label Content="Дата"
                   HorizontalAlignment="Center"/>
            <TextBox Style="{StaticResource CustomTextBox}" x:Name="txtDate" Margin="5" />

            <Label Content="Время приема"
                   HorizontalAlignment="Center"/>
